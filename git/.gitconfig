[alias]
	a = add
	c = commit
	co = checkout
	d = diff
	dc = diff --cached
	f = fetch
	fix = commit --fixup
	fp = fetch --prune
	l = !git log --graph --decorate --abbrev-commit --all --pretty=oneline || true
	lol = !git log --graph --decorate --abbrev-commit --all --pretty='format:%C(auto)%h %d %s %C(green)[%an] %C(bold blue)%ad' --date=relative || true
	ls-ignored = ls-files -o -i --exclude-standard
	p = push
	s = status --short
	st = status
[color]
	ui = auto
[core]
	excludesFile = ~/.config/git/ignore
	hooksPath = ~/.config/git/hooks
[advice]
	skippedCherryPicks = false
[init]
	defaultBranch = master
[pull]
	ff = only
